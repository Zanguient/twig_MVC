{% extends 'local/mobile/base.twig' %}

{% block title %}{{ course.fullname }}{% endblock %}

{% block content %}
    <ul data-role="listview">
        {% for activity in activities %}
        <li>
            <a href="{{ activity.link is empty ? 'javascript:' : activity.link }}" data-ajax="false">
                <h3>{{ activity.name }}</h3>
                <p>{{ activity.intro|striptags }}</p>
                <p class="ui-li-aside">{{ trans(activity.complete, 'completion') }}</p>
            </a>
        </li>
        {% else %}
            <li>
                <h3>None</h3>
                <p>There are no (compatible) activities in this course.</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
